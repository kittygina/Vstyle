<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout_area"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#000"
            android:layout_alignParentTop="true">
            <ImageView
                android:id="@+id/btn_flash"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="5dp"
                android:src="@drawable/flash3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/desc"/>
            <ImageView
                android:id="@+id/btn_switch"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:src="@drawable/switch2"
                android:layout_width="95dp"
                android:layout_height="50dp"
                android:contentDescription="@string/desc"/>

        </RelativeLayout>
        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_below="@+id/layout_area"
            android:layout_above="@+id/layout_area1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:id="@+id/layout_area1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#000"
            android:layout_alignParentBottom="true">
            <ImageView
                android:id="@+id/btn_exit"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/close2"
                android:layout_width="45dp"
                android:layout_height="35dp" />
            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/btn_take_photo"
                android:layout_centerInParent="true"
                android:src="@drawable/cam3"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <ImageView
                android:id="@+id/btn_lib"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:src="@drawable/gallery5"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/desc"/>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>